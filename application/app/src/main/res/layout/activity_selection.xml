<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/simpleExoPlayerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SelectionButtonStyle"
        android:text="@string/simple_exoplayer" />

    <Button
        android:id="@+id/customExoPlayerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SelectionButtonStyle"
        android:text="@string/custom_exoplayer" />

    <Button
        android:id="@+id/styledExoPlayerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SelectionButtonStyle"
        android:text="@string/styled_exoplayer" />

    <Button
        android:id="@+id/addsExoPlayerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SelectionButtonStyle"
        android:text="@string/adds_exoplayer" />


</LinearLayout>